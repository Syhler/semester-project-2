<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="program" prefHeight="120.0" style="-fx-border-style: none none solid none; -fx-border-width: 2; -fx-border-color: black;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.presentation.ProgramController">
   <children>
      <HBox prefHeight="119.0" prefWidth="546.0">
         <children>
            <ImageView fitHeight="127.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@loginImages/loginUserIcon.png" />
               </image>
               <HBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </HBox.margin>
            </ImageView>
            <VBox>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <children>
                  <Label fx:id="titleHeader" alignment="TOP_LEFT" prefHeight="40.0" prefWidth="100.0" text="Title:" wrapText="true">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="title" alignment="TOP_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="120.0" prefWidth="100.0" text="Title" wrapText="true">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            <VBox>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <children>
                  <Label fx:id="descriptionHeader" alignment="TOP_LEFT" prefHeight="40.0" prefWidth="200.0" text="Description:" wrapText="true">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="description" alignment="TOP_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="120.0" prefWidth="200.0" text="Description" wrapText="true">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            <VBox fx:id="buttonHolder" alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button fx:id="showMore" mnemonicParsing="false" text="Show more" VBox.vgrow="ALWAYS" />
                  <Button fx:id="updateProgram" mnemonicParsing="false" text="Update" VBox.vgrow="ALWAYS" />
                  <Button fx:id="deleteProgram" mnemonicParsing="false" text="Delete" VBox.vgrow="ALWAYS" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
