<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.presentation.program.CreateProgramController">
   <children>
      <VBox fx:id="createProgramVbox" prefHeight="219.0" prefWidth="400" stylesheets="@css/styles.css">
         <children>
            <VBox>
               <children>
                  <Label fx:id="createProgTitle" text="Title:">
                     <VBox.margin>
                        <Insets bottom="2.0" left="5.0" />
                     </VBox.margin>
                  </Label>
                  <TextArea fx:id="insertTitle" prefHeight="200.0" prefWidth="200.0" promptText="Insert title here" wrapText="true">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                  </TextArea>
                  <Label fx:id="remainingCharactersTitle" text="Tegn">
                     <VBox.margin>
                        <Insets bottom="10.0" left="5.0" top="2.0" />
                     </VBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="5.0" />
               </VBox.margin>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="createProgDescription" text="Description:">
                     <VBox.margin>
                        <Insets bottom="2.0" left="5.0" />
                     </VBox.margin>
                  </Label>
                  <TextArea fx:id="insertDescription" prefHeight="200.0" prefWidth="200.0" promptText="Insert description here" wrapText="true">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                  </TextArea>
                  <Label fx:id="remainingCharactersDesc" text="Tegn">
                     <VBox.margin>
                        <Insets bottom="10.0" left="5.0" top="2.0" />
                     </VBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets bottom="2.0" />
               </VBox.margin>
            </VBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="createProgramBtn" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#createProgramOnAction" text="Create Program">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="cancelCreateProgram" mnemonicParsing="false" onAction="#closeCreateProgram" text="Cancel" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
      <ProgressIndicator fx:id="progressIndicator" visible="false"/>
   </children>
</StackPane>
