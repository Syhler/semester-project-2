<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="programInfo" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.presentation.ProgramController">
   <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true">
         <image>
            <Image url="@loginImages/loginUserIcon.png" />
         </image></ImageView>
      <TextArea fx:id="infoTitle" prefHeight="50.0" prefWidth="200.0" promptText="Title" wrapText="true" />
      <TextArea fx:id="infoDescription" layoutX="10.0" layoutY="160.0" minHeight="100.0" prefHeight="50.0" prefWidth="200.0" promptText="Description" wrapText="true" />
      <VBox prefHeight="50.0" prefWidth="100.0">
         <children>
            <Label fx:id="companyInfoHeader" text="Produced by">
               <VBox.margin>
                  <Insets left="5.0" top="5.0" />
               </VBox.margin>
            </Label>
            <TextArea fx:id="infoCompany" prefHeight="100.0" prefWidth="200.0" promptText="Company" wrapText="true" />
         </children>
      </VBox>
      <VBox prefHeight="100.0" prefWidth="100.0">
         <children>
            <Label fx:id="producerInfoHeader" text="Producers">
               <VBox.margin>
                  <Insets left="5.0" top="5.0" />
               </VBox.margin>
            </Label>
            <TextArea fx:id="infoProducer" minHeight="75.0" prefHeight="100.0" prefWidth="200.0" promptText="Producer" wrapText="true" />
         </children>
      </VBox>
      <VBox prefHeight="100.0" prefWidth="100.0">
         <children>
            <Label fx:id="creditInfoHeader" text="Credits">
               <VBox.margin>
                  <Insets left="5.0" />
               </VBox.margin>
            </Label>
            <TextArea fx:id="infoCredits" prefHeight="100.0" prefWidth="200.0" promptText="Credits" wrapText="true" />
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </VBox>
      <HBox prefHeight="26.0" prefWidth="200.0">
         <children>
            <Button fx:id="updateProgInfoBtn" mnemonicParsing="false" text="Update">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="deleteProgBtn" alignment="TOP_LEFT" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Delete">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
